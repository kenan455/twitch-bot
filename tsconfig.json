{
  "compilerOptions": {
    "target": "es2016",       
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true,               
    "allowJs": true,          
    "skipLibCheck": true     ,
    "moduleResolution": "node"                            /* Skip type checking all .d.ts files. */
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
